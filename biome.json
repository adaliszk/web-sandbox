{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": { "enabled": true },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "bracketSameLine": true,
            "lineWidth": 100
        }
    },
    "json": { "formatter": { "enabled": true } },
    "css": { "formatter": { "enabled": true } }
}
